@model orocoche_v2.Models.Modelos

@{
    ViewBag.Title = "View";
    ViewBag.FechaIni = "";
    ViewBag.FechaFin = "";
}
<h2>Nueva Reserva</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="card mx-5 mt-3" style="width: 20%; border: 1px solid black; float:left;">
            <img src="~/Content/Images/@Html.DisplayFor(modelItem => Model.Imagen)" class="card-img-top" />
            <div class="card-body h5 ml-3">
                <p>MARCA: @Html.DisplayFor(modelItem => Model.Marca1.NombreMarca)</p>
                <p>MODELO: @Html.DisplayFor(modelItem => Model.Modelo)</p>
                <p>AÑO: @Html.DisplayFor(modelItem => Model.Año)</p>
                <p>POTENCIA: @Html.DisplayFor(modelItem => Model.Potencia)cv</p>
                <p>PESO: @Html.DisplayFor(modelItem => Model.Peso)kg</p>
                <p>CARROCERÍA: @Html.DisplayFor(modelItem => Model.TipoCoche.NombreTipo)</p>
                <p>COMBUSTIBLE: @Html.DisplayFor(modelItem => Model.TipoMotor.NombreTipo)</p>
            </div>
        </div>
        <div style="float: right; margin-right: 25%;">
            <h4>Selecciona las fechas de reserva</h4><br />
            @*<h5>Fecha Inicio:</h5>
                @Html.JQueryUI().DatepickerFor().ShowButtonPanel(true).ChangeYear(true).ChangeMonth(true).MinDate(0)
                <br /><br />
                <h5>Fecha Fin</h5>
                @Html.JQueryUI().DatepickerFor().ShowButtonPanel(true).ChangeYear(true).ChangeMonth(true).MinDate(0)*@
            @Html.DropDownList("strSede",
            (IEnumerable<SelectListItem>)ViewBag.ListaSede, "Todas")
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group" style="clear:both; text-align:center;">
            <div>
                @*@Html.ActionLink("Reservalo", "Create", "Reservas")*@
            </div>
        </div>
    </div>
}

